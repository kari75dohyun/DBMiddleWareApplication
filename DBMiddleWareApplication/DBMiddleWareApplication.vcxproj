  <!-- 내가 보관해 둘 OpenSSL DLL 경로(프로젝트 안에 넣어두세요) -->
  <PropertyGroup Label="PinnedOpenSsl">
    <!-- 원하는 폴더로 바꿔도 됨 -->
    <PinnedOpenSslDir>$(ProjectDir)third_party\openssl\8.0\</PinnedOpenSslDir>
  </PropertyGroup>
  <!-- 내 OpenSSL DLL 목록 -->
  <ItemGroup>
    <PinnedOpenSslDll Include="$(PinnedOpenSslDir)libcrypto-1_1-x64.dll" />
    <PinnedOpenSslDll Include="$(PinnedOpenSslDir)libssl-1_1-x64.dll" />
  </ItemGroup>
  <!-- 1) vcpkg가 DLL 복사한 '후'에 OpenSSL 두 개만 제거 -->
  <Target Name="RemoveOpenSslDlls" AfterTargets="VcpkgCopyDlls;VcpkgCopyDllsAfterBuild;CopyFilesToOutputDirectory">
    <Message Text="RemoveOpenSslDlls: deleting vcpkg OpenSSL from $(OutDir)" Importance="high" />
    <ItemGroup>
      <_ToRemove Include="$(OutDir)libcrypto-1_1-x64.dll" />
      <_ToRemove Include="$(OutDir)libssl-1_1-x64.dll" />
      <!-- 혹시 TargetDir을 쓰는 설정일 대비 -->
      <_ToRemove Include="$(TargetDir)libcrypto-1_1-x64.dll" />
      <_ToRemove Include="$(TargetDir)libssl-1_1-x64.dll" />
    </ItemGroup>
    <Delete Files="@(_ToRemove)" ContinueOnError="true" />
  </Target>
  <!-- 2) 반드시 '삭제 후' 내 고정 DLL을 마지막에 복사 -->
  <Target Name="CopyPinnedOpenSslDlls" AfterTargets="RemoveOpenSslDlls">
    <Message Text="CopyPinnedOpenSslDlls: copying pinned OpenSSL to $(OutDir)" Importance="high" />
    <Copy SourceFiles="@(PinnedOpenSslDll)" DestinationFolder="$(OutDir)" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="false" />
  </Target>
